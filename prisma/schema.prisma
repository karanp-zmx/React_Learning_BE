// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  USER
}

enum Status {
  ACTIVE
  INACTIVE
}

model User {
  id          Int       @id @default(autoincrement())
  username    String    @unique
  password    String
  role        Role
  status      Status
  accessToken String?
  tokenExpiry DateTime?
  createdAt   DateTime  @default(now())
}

model StudentDetails {
  id           Int      @id @default(autoincrement())
  firstName    String
  lastName     String
  rollNumber   String   @unique
  class        String
  division     String
  email        String   @unique
  mobileNumber String
  address      String
  createdAt    DateTime @default(now())
}
